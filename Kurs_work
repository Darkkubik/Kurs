# Основной класс информации о клиенте, которому выдают кредит
class Bank:
    Name = ""
    Owner = ""
    Data = ""
    Period = ""
    Percant = 0.0
    Conditions = ""

    def __init__(self, nm, ow, dt, tm, per, cond):
        self.Name = nm
        self.Owner = ow
        self.Data = dt
        self.Period = tm
        self.Percant = per
        self.Conditions = cond

    def __str__(self):
        return self.Name
        return self.Owner
        return self.Data
        return self.Period
        return self.Percant
        return self.Conditions

